<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/customListLayout"
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal">
    <com.google.android.material.card.MaterialCardView
        app:rippleColor="@color/twitchAccent"
        android:id="@+id/card_view"
        app:cardElevation="15dp"
        android:layout_width="match_parent"
        android:clickable="true"
        android:hapticFeedbackEnabled="true"
        app:cardCornerRadius="10dp"
        android:layout_height="70dp">
    <LinearLayout
        android:background="@color/white"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RadioButton
        android:hapticFeedbackEnabled="true"
        android:layout_marginStart="5dp"
        android:id="@+id/list_radio"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fontFamily="@font/capriola" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textColor="@color/black"
            android:id="@+id/list_title"
            android:layout_marginBottom="5dp"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:fontFamily="@font/capriola"
            android:text="Learn Python from my youtube channel please subs" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/list_time"
                android:textColor="#424242"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/capriola"
                android:text="30-06-22 10:35 PM"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/list_notification"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/capriola"
                android:textStyle="bold"
                app:drawableLeftCompat="@drawable/ic_baseline_notifications_active_24" />
        </LinearLayout>
    </LinearLayout>

    </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>